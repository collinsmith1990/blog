<table>
	<%= link_to 'New', new_article_path %>
	<th>Articles</th>
	<% @articles.each do |article| %>
		<tr>
			<td><strong>Title: <strong><%= link_to article.title, article_path(article) %></strong>
			<td><strong>Text: </strong><%= article.text %></td>
			<td><%= link_to 'Edit', edit_article_path(article.id) %></td>
			<td><%= link_to 'Delete', article_path(article.id), method: :delete %></td>
		</tr>
	<% end %>
</table>